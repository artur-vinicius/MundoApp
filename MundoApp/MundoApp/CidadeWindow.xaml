<Window x:Class="MundoApp.CidadeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MundoApp"
        mc:Ignorable="d"
        Title="PaisWindow" Height="350" Width="600" Background="DarkOliveGreen">
    <Grid>
        <TextBlock HorizontalAlignment="Center" Height="42" Margin="0,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" TextAlignment="Center" FontSize="40" FontFamily="Copperplate Gothic Bold" Foreground="White" Width="194" FontWeight="Normal"><Run Language="pt-br" Text="CIDADE"/></TextBlock>
        <TextBox Name="txtId" HorizontalAlignment="Left" Margin="37,102,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="60" Height="24"/>
        <TextBox Name="txtNome" HorizontalAlignment="Left" Margin="113,102,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="173" Height="24"/>
        <TextBlock HorizontalAlignment="Left" Margin="37,75,0,0" Text="ID" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="White" FontSize="20px"/>
        <TextBlock HorizontalAlignment="Left" Margin="37,75,0,0" Text="ID" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="White" FontSize="20px"/>
        <TextBlock HorizontalAlignment="Left" Margin="113,75,0,0" Text="CIDADE" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="White" FontSize="20px" Width="87"/>
        <ListBox Name="listCidade" HorizontalAlignment="Left" Height="129" Margin="37,153,0,0" VerticalAlignment="Top" Width="409"/>
        <Button Content="Listar" HorizontalAlignment="Left" Margin="498,291,0,0" VerticalAlignment="Top" Height="21" Width="54" Background="White" Click="ListarClick"/>
        <Button Content="Adicionar" HorizontalAlignment="Left" Margin="498,0,0,0" VerticalAlignment="Center" Height="21" Width="54" Background="White" Click="InserirClick"/>
        <Button Content="Atualizar" HorizontalAlignment="Left" Margin="498,201,0,0" VerticalAlignment="Top" Height="22" Width="54" Background="White" Click="AtualizarClick"/>
        <Button Content="Remover" HorizontalAlignment="Left" Margin="498,246,0,0" VerticalAlignment="Top" Height="21" Width="54" Background="White" Click="ExcluirClick"/>
        <TextBlock HorizontalAlignment="Left" Margin="300,75,0,0" Text="POPULAÇÃO" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="White" FontSize="20px" Width="124"/>
        <TextBox Name="txtPop" HorizontalAlignment="Left" Margin="300,103,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="146" Height="24"/>
        <TextBox Name="txtIdEstado" HorizontalAlignment="Left" Margin="465,103,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="60" Height="24" RenderTransformOrigin="0.451,0.544"/>
        <TextBlock HorizontalAlignment="Left" Margin="465,75,0,0" Text="ESTADO" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="White" FontSize="20px" Width="87"/>
    </Grid>
</Window>

<Window x:Class="MundoApp.MapaPaisWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MundoApp"
        mc:Ignorable="d"
        Title="MapaPaisWindow" Height="350" Width="600" Background="DarkOliveGreen">
    <Grid>
        <TextBlock HorizontalAlignment="Center" Height="42" Margin="0,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" TextAlignment="Center" FontSize="40" FontFamily="Copperplate Gothic Bold" Foreground="White" Width="600" FontWeight="Normal"><Run Language="pt-br" Text="MAPA DOS PAÍSES"/></TextBlock>
        <ListBox Name="listPais" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,83,0,0" Width="380" Height="75"/>
        <ListBox Name="listEstados" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,186,0,0" Width="380" Height="75"/>

        <Button Content="Listar" HorizontalAlignment="Center" Margin="0,279,0,0" VerticalAlignment="Top"  Click="ListarClick" Height="37" Width="70"/>
    </Grid>
</Window>

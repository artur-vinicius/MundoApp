<Window x:Class="MundoApp.PaisWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MundoApp"
        mc:Ignorable="d"
        Title="PaisWindow" Height="350" Width="600" Background="DarkOliveGreen">
    <Grid>
        <TextBlock HorizontalAlignment="Center" Height="42" Margin="0,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" TextAlignment="Center" FontSize="40" FontFamily="Copperplate Gothic Bold" Foreground="White" Width="194" FontWeight="Normal"><Run Language="pt-br" Text="PAÍS"/></TextBlock>
        <TextBox Name="txtId"  HorizontalAlignment="Left" Margin="37,102,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="60" Height="24"/>
        <TextBox Name="txtPais" HorizontalAlignment="Left" Margin="113,102,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="173" Height="24"/>
        <TextBlock HorizontalAlignment="Left" Margin="37,75,0,0" Text="ID" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="White" FontSize="20px"/>
        <TextBlock HorizontalAlignment="Left" Margin="113,75,0,0" Text="PAÍS" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="White" FontSize="20px" Width="87"/>
        <ListBox Name="ListPais" HorizontalAlignment="Left" Height="129" Margin="37,153,0,0" VerticalAlignment="Top" Width="409" SelectionChanged="ListPais_SelectionChanged"/>
        <Button Content="Listar" HorizontalAlignment="Left" Margin="491,257,0,0" VerticalAlignment="Top" Height="25" Width="63" Background="White" Click="ListarClick"/>
        <Button Content="Adicionar" HorizontalAlignment="Left" Margin="491,102,0,0" VerticalAlignment="Top" Height="25" Width="63" Background="White" Click="InserirClick"/>
        <Button Content="Atualizar" HorizontalAlignment="Left" Margin="491,153,0,0" VerticalAlignment="Top" Height="25" Width="63" Background="White" Click="AtualizarClick"/>
        <Button Content="Remover" HorizontalAlignment="Left" Margin="491,205,0,0" VerticalAlignment="Top" Height="25" Width="63" Background="White" Click="ExcluirClick"/>
        <TextBox Name="txtPop" HorizontalAlignment="Left" Margin="300,102,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="146" Height="24"/>
        <TextBlock  HorizontalAlignment="Left" Margin="300,75,0,0" Text="POPULAÇÃO" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="White" FontSize="20px" Width="119"/>
    </Grid>
</Window>
